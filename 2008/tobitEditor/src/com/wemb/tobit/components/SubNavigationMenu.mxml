<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  verticalAlign="bottom" height="100%" paddingBottom="9">
	
	<fx:Script>
		<![CDATA[
			import com.wemb.tobit.vo.MenuInfo;
			
			[Bindable]
			private var _menuInfo:MenuInfo;

			public function get menuInfo():MenuInfo
			{
				return _menuInfo;
			}

			public function set menuInfo(value:MenuInfo):void
			{
				_menuInfo = value;
			}

		]]>
	</fx:Script>
	
	<s:Image source="@Embed(source='/assets/common/b_next.png')"/>
	
	<s:HGroup paddingBottom="2">
		<s:Label text="{_menuInfo.name}" styleName="subNavigationMenu" 
				 buttonMode="true" useHandCursor="true" mouseChildren="false"/>
	</s:HGroup>
</s:HGroup>
