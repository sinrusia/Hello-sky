<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%" creationComplete="iniComp()" xmlns:bar="com.wemb.tobit.components.bar.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.controls.Image;
			import mx.controls.Label;
			
			[Embed('/assets/common/dv04.png')]	// 4*20
			[Bindable]private var dvSkin:Class;
			
			[Bindable]private var _type:String;		
			public function set type(value:String):void
			{
				_type = value;
			}
			
			private var _titles:String;
			public function set titles(value:String):void
			{
				_titles = value;
			}
			
			private var _length:Number = 0;
			private var _labelwidth:Number;
			private function initComp():void
			{
				var title_a:Array = _titles.split(",");
				_length = title_a.length;			
				if(isTitle == false){
					_labelwidth = (this.width-10-(4*(_length-1)))/_length;
				} else {
					_labelwidth = (this.width-85-(4*(_length-1)))/_length;
				}
				
				
				for( var i:int; i<_length; i++)
				{
					var lb:Label = new Label();
					lb.width = _labelwidth;
					lb.styleName = "chartTitleLabelStyle";
					lb.setStyle("paddingTop", 4);
					lb.text = title_a[i];
					box.addChild(lb);
					
					if ( i != _length-1 )
					{
						var img:Image = new Image();
						img.source = dvSkin;
						box.addChild(img);
					}
				}
			}
			[Bindable]
			public var isTitle:Boolean = true;
		]]>
	</fx:Script>
	<bar:TitleBar width="100%" height="100%"/>
	<s:HGroup paddingBottom="0" paddingLeft="3" paddingRight="3" paddingTop="0"
			  id="box" verticalAlign="middle" gap="0" height="100%" width="100%">
		<s:Label width="75" text="{_type}" paddingTop="4" styleName="chartTitleLabelStyle"
				 visible="{isTitle}" includeInLayout="{isTitle}"/>
	</s:HGroup>
</s:Group>
