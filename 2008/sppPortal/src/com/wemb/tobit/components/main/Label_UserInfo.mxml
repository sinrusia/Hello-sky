<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" verticalAlign="middle" horizontalGap="5">

	<mx:Script>
		<![CDATA[
		
		[Bindable]private var _text:String = "";
		
		public function set text(value:String):void
		{
			_text = value;
		}
		
		[Bindable]private var _required:Boolean = false;
		public function set required(value:Boolean):void
		{
			_required = value;
		}
		
		]]>
	</mx:Script>
	
	<mx:Image source="@Embed(source='assets/main/calender/calender_bullet.png')"/>
	<mx:Label width="100%" text="{_text}" styleName="workLabel"/>
	<mx:Image id="img" source="@Embed(source='assets/css/AeonGraphical.swf',symbol='FormItem_indicatorSkin')" visible="{_required}"/>
</mx:HBox>
