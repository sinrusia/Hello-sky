<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" verticalAlign="middle"
	horizontalGap="3">

	<mx:Script>
		<![CDATA[
		
		[Bindable]private var _title:String = "";
		private var _workId:String = "";
		
		public function set title(value:String):void
		{
			if ( value != null )
			{
				_title = value;
			}
		}	
		public function set workId(value:String):void
		{
			if ( value != null )
			{
				_workId = value;
			}
		}
		public function get workId():String
		{
			return _workId;
		}
		
		private function rollOverHandler():void
		{
			lb.styleName = "todayWorkOverLabel";
		}
		private function rollOutHandler():void
		{
			lb.styleName = "todayWorkUpLabel";
		}
		
		]]>
	</mx:Script>
	
	<mx:Image source="@Embed(source='assets/main/board/bullet_board.png')"/>
	<mx:Label id="lb" width="245" text="{_title}" styleName="todayWorkUpLabel" paddingTop="1"
		buttonMode="true" mouseChildren="false" rollOver="rollOverHandler()" rollOut="rollOutHandler();"/>
	
</mx:HBox>
