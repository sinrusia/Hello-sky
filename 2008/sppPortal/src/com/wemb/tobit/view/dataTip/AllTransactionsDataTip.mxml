<?xml version="1.0" encoding="utf-8"?>
<mx:VBox
	xmlns:mx="http://www.adobe.com/2006/mxml"
	backgroundColor="0x000000"
	borderColor="0x000000"
	borderStyle="solid" borderThickness=".5"
	paddingTop="0"
	paddingBottom="0"
	paddingRight="5"
	paddingLeft="5" cornerRadius="4"
	verticalGap="-2" backgroundAlpha=".7"
	color="0x000000"
>
	<mx:NumberFormatter id="nFmt" useThousandsSeparator="true" />
	<mx:HBox horizontalGap="-2">
		<mx:Label text="{title}" color="0xffffff" 
			textAlign="center" fontWeight="bold" fontSize="10" />
		<mx:Label text="{_value}" color="{valueColor}" 
			textAlign="center" fontSize="10" />
	</mx:HBox>
	<mx:Script>
		<![CDATA[
			import mx.charts.series.items.ColumnSeriesItem;
			import mx.charts.series.ColumnSeries;
			import mx.charts.series.LineSeries;
			import mx.charts.series.BarSeries;
			import mx.charts.series.items.LineSeriesItem;
			import mx.charts.HitData;

			[Bindable]
			private var title:String;

			[Bindable]
			private var _value:String;
			
			[Bindable]
			private var valueColor:uint;

			
			override public function set data(value:Object):void{
				var hd:HitData = value as HitData;
				valueColor = hd.contextColor;
       			if(hd.element is LineSeries){
       				title = LineSeries(hd.element).displayName + ":";
       				_value = nFmt.format(LineSeriesItem(hd.chartItem).yValue) + "mbps";
       			}else{
       				 title = ColumnSeries(hd.element).displayName + ":";
       				 _value = nFmt.format(ColumnSeriesItem(hd.chartItem).yValue) + "mbps";
       			}
			}//end set data
		]]>
	</mx:Script>
</mx:VBox>
