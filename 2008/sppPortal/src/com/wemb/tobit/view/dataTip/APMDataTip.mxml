<?xml version="1.0" encoding="utf-8"?>
<mx:VBox
	xmlns:mx="http://www.adobe.com/2006/mxml"
	backgroundColor="0x000000"
	borderColor="0x000000"
	borderStyle="solid" borderThickness=".5"
	paddingTop="0"
	paddingBottom="0"
	paddingRight="5"
	paddingLeft="5" cornerRadius="4"
	verticalGap="-2" backgroundAlpha=".7"
	color="0x000000"
>
	<mx:NumberFormatter id="nFmt" useThousandsSeparator="true" />
	<mx:HBox horizontalGap="-2">
		<mx:Label text="{title}" color="0xffffff" 
			textAlign="center" fontWeight="bold" fontSize="11" />
		<mx:Label text="{_value}" color="{valueColor}" 
			textAlign="center" fontSize="11" />
	</mx:HBox>
	<mx:HBox horizontalGap="-2">
		<mx:Label text="Time:" fontSize="11" color="0xffffff" />
		<mx:Label text="{timeValue}" color="{valueColor}" fontSize="11"  />
	</mx:HBox>
	<mx:Script>
		<![CDATA[
			import mx.charts.series.items.ColumnSeriesItem;
			import mx.charts.series.ColumnSeries;
			import mx.charts.series.LineSeries;
			import mx.charts.series.BarSeries;
			import mx.charts.series.items.LineSeriesItem;
			import mx.charts.HitData;

			[Bindable]
			private var title:String;

			[Bindable]
			private var _value:String;
			
			[Bindable]
			private var valueColor:uint;
			[Bindable]
			private var timeValue:String;
			
			override public function set data(value:Object):void{
				var hd:HitData = value as HitData;
				valueColor = hd.contextColor;
       			if(hd.element is LineSeries){
       				if(LineSeries(hd.element).displayName == "전체상단")
	       				title = "전체:";
       				else if(LineSeries(hd.element).displayName == "전체평균상단")
	       				title = "전체평균:";
       				else if(LineSeries(hd.element).displayName == "전체평균하단")
	       				title = hd.item.E2E_TITLE + "평균:";
       				else if(LineSeries(hd.element).displayName == "전체하단")
	       				title = hd.item.E2E_TITLE + ":";
    				else
	       				title = hd.item.E2ETOT_TITLE + ":";
					var strLb:String = hd.item.stime;
					var stime:String = strLb.substr(8, 2)+":"+strLb.substr(10, 2)+":"+strLb.substr(12, 2);
				       				
       				timeValue = stime;
       				if(LineSeries(hd.element).yField == "E2E_CNT" || LineSeries(hd.element).yField == "E2ETOT_CNT"){
	   					if(Number(LineSeriesItem(hd.chartItem).yValue) < 1)
		       				_value = Number(nFmt.format(LineSeriesItem(hd.chartItem).yValue)) + "건";
		       			else
		       				_value = nFmt.format(LineSeriesItem(hd.chartItem).yValue) + "건";
		       		} else {
	   					if(Number(LineSeriesItem(hd.chartItem).yValue) < 1)
		       				_value = Number(nFmt.format(LineSeriesItem(hd.chartItem).yValue)) + "초";
		       			else
		       				_value = nFmt.format(LineSeriesItem(hd.chartItem).yValue) + "초";
		       		}
       			}
			}//end set data
		]]>
	</mx:Script>
</mx:VBox>
